{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "useDefineForClassFields": true,
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "skipLibCheck": true,
    "sourceMap": true,
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@model/*": [
        "./src/model/*"
      ]
    },
    "lib": [
      "esnext"
    ]
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./@types/*.d.ts",
    "./@types/*.ts",
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.d.ts"
  ]
}